@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity;

@model AlertMe.Models.LoginModel

@inject SignInManager<AlertMe.Models.User> SignInManager

@{
    ViewBag.Title = "Login";
 Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-lg-4 col-md-6 mx-auto">
    <div class="card card-login">
        @using (Html.BeginForm("Login", "User"))
        {
            <div class="card-header card-header-pills text-center">
                <h2 class="card-title font-weight-light serif-font">Login</h2>
                <div class="social-line">
                    <a href="#pablo" class="btn btn-just-icon btn-link">
                        <i class="fa fa-facebook-square"></i>
                    </a>
                    <a href="#pablo" class="btn btn-just-icon btn-link">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>
            </div>
            <p class="description text-center">Or Be Classical</p>
            <div class="card-body">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">mail</i>
                        </span>
                    </div>

                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email..." })
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">lock_outline</i>
                        </span>
                    </div>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password..." })
                </div>
            </div>
            <div class="footer text-center">
                <input type="submit" class="d-block mt-3 mx-auto btn btn-small btn-info" value="Login" />
                <a class="btn btn-info btn-link btn-wd btn-lg" @Html.ActionLink("Register", "Register", "User")> </a>

            </div>
        }
    </div>
</div>