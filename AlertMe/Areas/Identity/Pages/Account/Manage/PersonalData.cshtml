@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div class="row">
            <form asp-page="DownloadPersonalData" method="post" class="form-group col">
                <button class="d-block mt-3 mx-auto btn btn-small btn-info" type="submit">Download</button>
            </form>
            <p class="col">
                <a asp-page="DeletePersonalData" class="d-block mt-3 mx-auto btn btn-small btn-info">Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

    <script>
    $("#sidebar").children("li:nth-child(5)").children("a").addClass("active");
    </script>